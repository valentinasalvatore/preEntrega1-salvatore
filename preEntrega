    let gustoFrappe = prompt ("ingrese un gusto")

   function frapuccino (gustoFrappe)
   while (gustaFrappe != "pistacho")
    switch(gustoFrappe)[
      case "vainilla":
        console.log("su Gusto es vailnilla");
      break
      case "chocolate"
        console.log("su Gusto es chocolate");
      break
